<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KeyVaultMobile.PasswordPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0"
                    Grid.Column="0"
                    CornerRadius="20"
                    FontSize="30"
                    Text="&lt;"/>
            
            <Entry Grid.Row="2"
                   Margin="15,0"
                   Grid.ColumnSpan="4"
                   FontSize="25"
                   Placeholder="Название"/>

            <Entry Grid.Row="3"
                   Grid.ColumnSpan="4"
                   Margin="15,0"
                   FontSize="25"
                   Placeholder="Пароль"/>

            <Entry Grid.Row="4"
                   Grid.ColumnSpan="4"
                   Margin="15,0"
                   FontSize="25"
                   Placeholder="Адрес"/>

            <Entry Grid.Row="5"
                   Grid.ColumnSpan="4"
                   Margin="15,0"
                   FontSize="25"
                   Placeholder="Логин"/>

            <Editor Grid.Row="6"
                    Grid.ColumnSpan="4"
                    Margin="15,0"
                    FontSize="25"
                    HeightRequest="200"
                    Keyboard="Chat"
                    MaxLength="500" 
                    Placeholder="Дополнительно"/>

            <Button Text="Удалить" 
                    Grid.ColumnSpan="2"
                    Grid.Row="7"
                    Grid.Column="0"
                    FontSize="20"
                    FontAttributes="Bold"
                    BackgroundColor="White"
                    CornerRadius="10"/>
            
            <Button Text="Изменить" 
                    Grid.Row="7"
                    Grid.ColumnSpan="2"
                    Grid.Column="2"
                    FontSize="20"
                    FontAttributes="Bold"
                    BackgroundColor="White"
                    CornerRadius="10"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>