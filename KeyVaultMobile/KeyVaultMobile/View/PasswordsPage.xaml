<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KeyVaultMobile.PasswordsPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <ScrollView Grid.Row="0"
                        x:Name="PasswordsPageScrollView">
            </ScrollView>

            <Grid Grid.Row="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        FontAttributes="Bold"
                        FontSize="20"
                        CornerRadius="10"
                        Text="G"/>

                <Button Grid.Column="1"
                        FontAttributes="Bold"
                        FontSize="20"
                        CornerRadius="10"
                        Text="ADD"/>

                <Button Grid.Column="2"
                        FontAttributes="Bold"
                        FontSize="20"
                        CornerRadius="10"
                        Text="S"/>

            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>